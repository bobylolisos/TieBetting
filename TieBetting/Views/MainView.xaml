<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TieBetting.Views.MainView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:tabBar="clr-namespace:TieBetting.Shared.Components.TabBar"
    xmlns:viewModels="clr-namespace:TieBetting.ViewModels"
    x:DataType="viewModels:MainViewModel"
    Title="MainView">

    <Shell.NavBarIsVisible>False</Shell.NavBarIsVisible>

    <Grid RowDefinitions="Auto,*,Auto">
        <Grid
            HeightRequest="57"
            BackgroundColor="{StaticResource Primary}">
            <Label
                Text="Tie betting"
                TextColor="White"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                CharacterSpacing="2"
                FontAttributes="Bold"
                FontSize="20" />
        </Grid>

        <tabBar:TabBar
            Grid.Row="2"
            Grid.Column="0"
            TabBarItem1Command="{Binding ImportCalendarToDatabaseCommand}"
            TabBarItem1Label="Import matches"
            TabBarItem4Command="{Binding MyCommand}"
            TabBarItem4Label="InstÃ¤llningar" />
    </Grid>
</ContentPage>