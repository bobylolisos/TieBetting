<?xml version="1.0" encoding="utf-8" ?>
<base:ViewBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:base="using:TieBetting.Views.Base"
             xmlns:viewModels="using:TieBetting.ViewModels"
             x:Class="TieBetting.Views.TeamMatchesView"
             x:DataType="viewModels:TeamMatchesViewModel"
             Title="TeamMatchesView">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding NavigateBackCommand}" />
    </Shell.BackButtonBehavior>
    <Shell.TitleView>
        <Label
            Text="ALL MATCHES"
            Style="{StaticResource HeaderLabelStyle}" />
    </Shell.TitleView>

    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</base:ViewBase>