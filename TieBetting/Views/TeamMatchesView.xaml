<?xml version="1.0" encoding="utf-8" ?>
<base:ViewBase
    x:Class="TieBetting.Views.TeamMatchesView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:TieBetting.ViewModels"
    xmlns:base="clr-namespace:TieBetting.Views.Base"
    Title="TeamMatchesView"
    Background="{StaticResource Gray100}"
    x:DataType="viewModels:TeamMatchesViewModel">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding NavigateBackCommand}" />
    </Shell.BackButtonBehavior>
    <Shell.TitleView>
        <Label
            Text="TEAM MATCHES"
            Style="{StaticResource HeaderLabelStyle}" />
    </Shell.TitleView>

    <Grid RowDefinitions="Auto">
        <Grid
            Grid.Row="0" BackgroundColor="White"
            Grid.Column="0" Padding="5"
            ColumnDefinitions="Auto,*"
            Margin="5">
            <Image
                Grid.Row="0"
                Grid.Column="0"
                WidthRequest="40"
                Margin="0,3"
                Source="{Binding HeaderImage}" />
            <Label
                Grid.Row="0"
                Grid.Column="1"
                Margin="15,0"
                Text="{Binding HeaderText}"
                VerticalTextAlignment="Center"
                FontSize="22" />
        </Grid>
    </Grid>
</base:ViewBase>